<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/root_layout">
    <Button
            android:id="@+id/beat60button"
            android:text="60"
            android:textSize="28sp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/beat90button"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/beat90button"
            android:text="90"
            android:textSize="28sp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@+id/beat60button"
            app:layout_constraintBottom_toBottomOf="@+id/beat60button"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/beat60button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/beat120button"/>
    <Button
            android:id="@+id/beat120button"
            android:text="120"
            android:textSize="28sp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@+id/beat90button"
            app:layout_constraintBottom_toBottomOf="@+id/beat90button"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/beat90button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tempoTextView"/>
    <TextView
            android:id="@+id/tempoTextView"
            android:text="90"
            android:layout_width="0dp"
            android:layout_height="72dp"
            app:layout_constraintWidth_percent="0.2"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            tools:text="90"
            app:layout_constraintTop_toTopOf="@+id/beat120button" app:layout_constraintBottom_toBottomOf="@+id/beat120button"
            app:layout_constraintStart_toEndOf="@+id/beat120button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <SeekBar
            android:id="@+id/tempoSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="145dp"/>
    <Button
            android:text="Play"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="24sp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.892"/>



</android.support.constraint.ConstraintLayout>