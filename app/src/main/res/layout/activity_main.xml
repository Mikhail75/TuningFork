<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/root_layout">
    <TextView
            android:id="@+id/tempoLabelTextView"
            android:text="Tempo"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:id="@+id/beat60button"
            android:text="60"
            android:textSize="28sp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/beat90button"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/tempoLabelTextView"/>
    <Button
            android:id="@+id/beat90button"
            android:text="90"
            android:textSize="28sp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@+id/beat60button"
            app:layout_constraintBottom_toBottomOf="@+id/beat60button"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/beat60button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/beat120button"/>
    <Button
            android:id="@+id/beat120button"
            android:text="120"
            android:textSize="28sp"
            app:layout_constraintWidth_percent="0.2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@+id/beat90button"
            app:layout_constraintBottom_toBottomOf="@+id/beat90button"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/beat90button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tempoTextView"/>
    <TextView
            android:id="@+id/tempoTextView"
            android:text="90"
            android:layout_width="0dp"
            android:layout_height="72dp"
            app:layout_constraintWidth_percent="0.2"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            tools:text="90"
            app:layout_constraintTop_toTopOf="@+id/beat120button"
            app:layout_constraintBottom_toBottomOf="@+id/beat120button"
            app:layout_constraintStart_toEndOf="@+id/beat120button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <SeekBar
            android:id="@+id/tempoSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/beat60button"/>
    <TextView
            android:id="@+id/majorKeysTextView"
            android:text="Major keys"
            android:gravity="center"
            android:background="#246224"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tempoSeekBar"/>
    <Button
            android:id="@+id/BDurButton"
            android:text="B"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/FDurButton"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/majorKeysTextView"/>
    <Button
            android:id="@+id/FDurButton"
            android:text="F"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/BDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/BDurButton"
            app:layout_constraintStart_toEndOf="@+id/BDurButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/CDurButton"/>
    <Button
            android:id="@+id/CDurButton"
            android:text="C"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/FDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/FDurButton"
            app:layout_constraintStart_toEndOf="@+id/FDurButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/GDurButton"/>
    <Button
            android:id="@+id/GDurButton"
            android:text="G"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/CDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/CDurButton"
            app:layout_constraintStart_toEndOf="@+id/CDurButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/DDurButton"/>
    <Button
            android:id="@+id/DDurButton"
            android:text="D"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/GDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/GDurButton"
            app:layout_constraintStart_toEndOf="@+id/GDurButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Minor keys"
            android:gravity="center"
            android:background="#764906"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/minorKeysTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/BDurButton"/>
    <Button
            android:id="@+id/GMollDurButton"
            android:text="g"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textAllCaps="false" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/DMollDurButton"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/minorKeysTextView"/>
    <Button
            android:id="@+id/DMollDurButton"
            android:text="d"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textAllCaps="false" app:layout_constraintTop_toTopOf="@+id/GMollDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/GMollDurButton"
            app:layout_constraintStart_toEndOf="@+id/GMollDurButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/AMollDurButton"/>
    <Button
            android:id="@+id/AMollDurButton"
            android:text="a"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textAllCaps="false" app:layout_constraintTop_toTopOf="@+id/DMollDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/DMollDurButton"
            app:layout_constraintStart_toEndOf="@+id/DMollDurButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/EMollDurButton"/>
    <Button
            android:id="@+id/HMollDurButton"
            android:text="h"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textAllCaps="false" app:layout_constraintTop_toTopOf="@+id/EMollDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/EMollDurButton"
            app:layout_constraintStart_toEndOf="@+id/EMollDurButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/EMollDurButton"
            android:text="e"
            android:textSize="30sp"
            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textAllCaps="false" app:layout_constraintTop_toTopOf="@+id/AMollDurButton"
            app:layout_constraintBottom_toBottomOf="@+id/AMollDurButton"
            app:layout_constraintStart_toEndOf="@+id/AMollDurButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/HMollDurButton"/>
    <Button
            android:text="Play"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.892"/>


</android.support.constraint.ConstraintLayout>